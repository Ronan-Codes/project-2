      </div>
    </form>
  </div>

  <div class="form-wrapper col-12 mt-4 mb-5 row justify-content-center">
    <form class="signup-form col-4">
      <div class="form-group col-12">
        <input type="text" class="form-control text-dark" id="signup-username-input" aria-describedby="emailHelp"
          placeholder="Enter username">
      </div>
      <div class="form-group col-12">
        <input type="email" class="form-control text-dark" id="signup-email-input" aria-describedby="emailHelp"
          placeholder="Enter email">
      </div>
      <div class="form-group col-12">
        <input type="password" class="form-control" id="signup-password-input" placeholder="Password">
      </div>
      <div class="">
        <button type="submit" class="btn-md btn-light p-1 rounded">Signup</button>
      </div>
    </form>
  </div>
</main>

