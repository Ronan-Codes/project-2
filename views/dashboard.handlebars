<main id="dashboard-wrapper"
    class="dashboard-entry-wrapper col-11 col-md-10 row justify-content-center text-center pb-0 mt-0 text-light rounded">
    <div class="col-12 mb-0 mt-5 ">
        <h2 class="" >
            Your Journal Entries
        </h2>
    </div>

    <div id="userIdContainer" data-id="{{userData.id}}" style="display:none"></div>
    <div class="col-12 col-sm-10 col-md-10 col-xxl-6 datepickerContainer row mx-0 px-0 mt-md-5">
        <div type="text" id="datepicker" class="col-12"></div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="chosenDateModal" tabindex="-1" aria-labelledby="chosenDateModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title text-secondary" id="chosenDateModalLabel">
                        Would you like to create a journal entry for <span class="text-secondary" id="modalDate"></span>
                    </h6>
                    {{!-- <h6 class="modal-title text-secondary" id="chosenDateModalLabel">
                        No journal entry found for <span class="text-secondary" id="modalDate"></span> Would you like to create one for it?
                    </h6> --}}
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                {{!-- <div class="modal-body text-secondary">
                    No journal entry found for ${date}. Would you like to create one for it?
                </div> --}}
                <div class="modal-footer row justify-content-center">
                    {{!-- <div class="col-12 row justify-content-center"> --}}
                        <button type="button" class="col-6 btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button id="yesBtn" type="button" class="col-6 btn btn-sm btn-secondary">Yes</button>
                    {{!-- </div> --}}

                    {{!-- <div class="col-12">
                         <button id="yesBtn" type="button" class="btn btn-primary">Yes</button>
                    </div> --}}
                </div>
            </div>
        </div>
    </div>


    {{!-- <div id="entries-list-wrapper" class="col-8 rounded mb-5 bg-light px-0">
        <div class="list-group rounded" id="entries-list">
            {{#each journalEntries}}
            <a href="/dashboard/journalentry/{{id}}" class="list-group-item list-group-item-action list-group-item-info"
                data-entry-number="{{id}}">
                {{format_date created_at}}
            </a>
            {{/each}}
        </div>
    </div> --}}

    {{!-- <div class="col-12 mt-3">
        <button type="button" class="btn-md btn-light p-1 rounded" id="new-entry-btn">New Entry</button>
    </div> --}}
</main>

