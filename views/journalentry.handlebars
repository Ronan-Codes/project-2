<main class="journal-entry-wrapper col-7 row justify-content-center text-center py-5 mt-5 text-light rounded">
    <div class="col-12 mb-3">
        <h2 class="">
            Journal Entry
        </h2>
    </div>

    <div class="col-12 row justify-content-around mb-3">
        Daily Motivation: <span id="insert-motivation"></span>
    </div>

    <div class="form-grateful-wrapper row justify-content-around col-12 mb-5">
        <form class="update-form col-12 row justify-content-center">
            <div class="col-12">3 things you're grateful for. . . </div>
            <div class="form-group col-9 row">
                <span class="col-2"><label for="first-grateful-input">1. </label></span>
                <span class="col-9"><input id="first-grateful-input" class="form-control form-control-sm" type="text"
                        placeholder="" value="{{journalEntry.first_grateful_input}}"></span>
            </div>
            <div class="form-group col-9 row">
                <span class="col-2"><label for="second-grateful-input">2. </label></span>
                <span class="col-9"><input id="second-grateful-input" class="form-control form-control-sm" type="text"
                        placeholder="" value="{{journalEntry.second_grateful_input}}"></span>
            </div>
            <div class="form-group col-9 row">
                <span class="col-2"><label for="third-grateful-input">3. </label></span>
                <span class="col-9"><input id="third-grateful-input" class="form-control form-control-sm" type="text"
                        placeholder="" value="{{journalEntry.third_grateful_input}}"></span>
            </div>

            <div class="col-12">Freewrite</div>
            <div class="form-group col-9">
                <textarea class="form-control" id="freewrite-input" rows="4">{{journalEntry.freewrite_input}}</textarea>
            </div>

            <div class="col-12">Overall Mood</div>
            <div class="form-check form-check-inline mr-5">
                <input class="form-check-input" type="radio" name="mood-input" id="inlineRadio1" value="happy">
                <label class="form-check-label" for="inlineRadio1"><i class="fas fa-smile-beam"></i></label>
            </div>
            <div class="form-check form-check-inline mr-5">
                <input class="form-check-input" type="radio" name="mood-input" id="inlineRadio2" value="neutral">
                <label class="form-check-label" for="inlineRadio2"><i class="fas fa-meh"></i></label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="mood-input" id="inlineRadio3" value="sad">
                <label class="form-check-label" for="inlineRadio3"><i class="fas fa-frown"></i></label>
            </div>

            <div class="col-12 mt-3">
                <button type="click" class="btn-md btn-light p-1 mr-1 rounded col-1" id="back-btn">Back</button>
                <button type="click" class="btn-md btn-light p-1 mr-1 rounded col-1" id="delete-btn">Delete</button>
                <button type="submit" class="btn-md btn-light p-1 ml-1 rounded col-1">Update</button>
            </div>

        </form>
    </div>
</main>

<script src="/javascript/back.js"></script>
<script src="/javascript/delete-journal-entry.js"></script>
<script src="/javascript/update-journal-entry.js"></script>


